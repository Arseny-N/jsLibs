<script>
	
	function draw() {
		var dataBar = new fuzzData();
		drawStats({'dataLine': {},
		'appendSelector':'#statsTable',
		'dataBar':dataBar.dataBarA,
		'id':'bars',
		'vDataBar':[{ 'data': [dataBar.dataBarA],"id":'barsA',
			      'title':'none','hidden':true,
			      'tdClass':'chartContainerTop', 
			    },
			    { 'data': [dataBar.dataBar(5),dataBar.dataBar(5)],'id':'barsB','title':'none','hidden':false}, 
			    { 'data': [dataBar.dataBarC],'id':'barsC','title':'none','hide':true},
			    { 'data': [dataBar.dataBarC],'id':'barsD','title':'none','hide':true,'tdClass':'chartContainerBottom'}],
			   // vertical: true
			});
		$(".dropDownMenu").each(function(index, element){
			$(element).mouseenter(function(){
				$(this).find(".elem-hidden").show('fast');
			}).mouseleave(function(){
				$(this).find(".elem-hidden").hide('fast');
			});		
		});
	}	

	
	
</script>

<body onload="draw();">
