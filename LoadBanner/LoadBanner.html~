				function fillTable(list) {
					var buttons = '<td><img class="delete-button" src="icons/bitcons/gif/red/16x16/trash.gif"></td>';
					for(var index in list) {
						var e = list[index];
						$('table#onserver-banner-list').append('<tr><td>'+e.name+'</td>' + buttons + '</tr>');
					}
				}
				fillTable([
				{name:'hello'},
				{name:'Buye'},
				{name:'soda'},
